material FX/Explodder
{
    technique
    {
        pass
        {
            lighting off
            scene_blend add
            depth_write off
            fog_override true 

            point_sprites on
            point_size 2
            point_size_attenuation on

            texture_unit
            {
            texture flare.png
            }
        }
    }
}
