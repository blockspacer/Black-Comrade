particle_system FX/Explodder
{
    quota            100
    material         FX/Explodder
    particle_width      2
    particle_height      2
    cull_each         true
    renderer         billboard
    billboard_type      point
    accurate_facing      on

    emitter Ellipsoid
    {
        angle            180
        colour            1 0.4 0.4 1
        colour_range_start   1 0.4 0.4 1
        colour_range_end   1 1 0 1
        direction         0 1 0
        emission_rate      10
        velocity_min      0
        velocity_max      0
        time_to_live_min   5
        time_to_live_max   5
        duration_min      1
        duration_max      1
        repeat_delay_min   0
        repeat_delay_max   0
        width   0.3
        height   0.3
        depth   0.3
    }

    affector ColourFader
    {
        red      10.0
        green   -10.0
        blue   -10.0
        alpha   -5.0
    }
    
    affector DirectionRandomiser
    {
        randomness 100
    }
}

particle_system FX/awesomesauce
{
    quota 10
    material Particles/explosion
    particle_width 20 
    particle_height 20
    cull_each false 
    renderer billboard
    sorted false
    local_space false
    iteration_interval 0
    nonvisible_update_timeout 0
    billboard_type point
    billboard_origin center
    billboard_rotation_type texcoord
    common_up_vector 0 1 0
    point_rendering false
    accurate_facing false

    emitter Ellipsoid
    {
        angle 90
        colour 1 1 1 1
        colour_range_start 1 1 1 1
        colour_range_end 1 1 1 1
        direction 0 0 0
        emission_rate 10
        position 0 0 0
        velocity 0
        velocity_min 0
        velocity_max 0
        time_to_live_min 5
        time_to_live_max 6
        duration_min 1
        duration_max 2
        repeat_delay_min 0
        repeat_delay_max 0
        width 5
        height 5
        depth 5
    }

    affector Scaler
    {
        rate -10
    }
}
